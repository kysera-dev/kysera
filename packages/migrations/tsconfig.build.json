{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "composite": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test/**/*", "**/*.test.ts"]
}
