{
  "name": "@kysera/soft-delete",
  "version": "0.8.5",
  "description": "Soft delete plugin for Kysely repositories",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@kysera/core": "workspace:*"
  },
  "devDependencies": {
    "@kysera/dal": "workspace:*",
    "@kysera/repository": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "better-sqlite3": "^12.5.0",
    "kysely": "^0.28.9",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@kysera/executor": "workspace:*",
    "kysely": ">=0.28.8",
    "zod": "^4.3.6"
  },
  "peerDependenciesMeta": {
    "@kysera/executor": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "keywords": [
    "kysely",
    "data-access",
    "soft-delete",
    "plugin"
  ],
  "author": "Kysera Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kysera-dev/kysera.git",
    "directory": "packages/soft-delete"
  },
  "bugs": {
    "url": "https://github.com/kysera-dev/kysera/issues"
  },
  "homepage": "https://github.com/kysera-dev/kysera#readme",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
