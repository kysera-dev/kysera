{
  "name": "@kysera/debug",
  "version": "0.6.0",
  "description": "Debug utilities for Kysera ORM - query logging, profiling, SQL formatting",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "kysely": ">=0.28.8"
  },
  "dependencies": {
    "@kysera/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "kysely": "^0.28.8",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "kysely",
    "orm",
    "database",
    "debug",
    "profiling",
    "logging",
    "sql"
  ],
  "author": "Kysera Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kysera-dev/kysera.git",
    "directory": "packages/debug"
  },
  "bugs": {
    "url": "https://github.com/kysera-dev/kysera/issues"
  },
  "homepage": "https://github.com/kysera-dev/kysera#readme",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
