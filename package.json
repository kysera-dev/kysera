{
  "name": "kysera",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "description": "Production-ready TypeScript ORM built on Kysely",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:multi-db": "turbo run test:multi-db",
    "test:docker": "tsx scripts/test-with-docker.ts",
    "docker:up": "/usr/local/bin/docker compose -f docker-compose.test.yml up -d",
    "docker:down": "/usr/local/bin/docker compose -f docker-compose.test.yml down -v",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "fix:all": "pnpm lint:fix && pnpm format",
    "docs": "typedoc",
    "docs:serve": "pnpm docs && npx http-server docs/api -p 8080 -o",
    "release": "tsx scripts/release.ts",
    "release:dry": "tsx scripts/release.ts --dry-run",
    "release:ci": "tsx scripts/release.ts --skip-tests --force",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "postinstall": "pnpm rebuild better-sqlite3 2>/dev/null || true"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.36.0",
    "@swc/core": "^1.13.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.6.0",
    "@types/pg": "^8.11.10",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@xec-sh/kit": "^0.8.3",
    "better-sqlite3": "^12.4.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "glob": "^11.0.3",
    "kysely": "^0.28.7",
    "mysql2": "^3.15.1",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "semver": "^7.6.3",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
