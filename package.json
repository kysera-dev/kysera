{
  "name": "kysera",
  "version": "0.8.4",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.25.0",
  "description": "Type-safe data access toolkit for TypeScript built on Kysely",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:multi-db": "turbo run test:multi-db",
    "test:docker": "tsx scripts/test-with-docker.ts",
    "docker:up": "/usr/local/bin/docker compose -f docker-compose.test.yml up -d",
    "docker:down": "/usr/local/bin/docker compose -f docker-compose.test.yml down -v",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "fix:all": "pnpm lint:fix && pnpm format",
    "docs": "typedoc",
    "docs:serve": "pnpm docs && npx http-server docs/api -p 8080 -o",
    "release": "tsx scripts/release.ts",
    "release:dry": "tsx scripts/release.ts --dry-run",
    "release:ci": "tsx scripts/release.ts --skip-tests --force",
    "postinstall": "pnpm rebuild better-sqlite3 2>/dev/null || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@swc/core": "^1.15.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@xec-sh/kit": "^0.8.3",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "glob": "^13.0.0",
    "kysely": "^0.28.9",
    "mysql2": "^3.16.0",
    "pg": "^8.16.3",
    "prettier": "^3.7.4",
    "semver": "^7.7.3",
    "tsx": "^4.21.0",
    "turbo": "^2.7.1",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
