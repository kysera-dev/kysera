{
  "name": "@kysera/cli",
  "version": "0.1.0",
  "description": "Comprehensive command-line interface for Kysera ORM",
  "type": "module",
  "bin": {
    "kysera": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "kysera",
    "orm",
    "cli",
    "database",
    "migrations",
    "kysely",
    "typescript"
  ],
  "author": "Kysera Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kysera/kysera.git",
    "directory": "apps/cli"
  },
  "bugs": {
    "url": "https://github.com/kysera/kysera/issues"
  },
  "homepage": "https://github.com/kysera/kysera#readme",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "cli-table3": "^0.6.5",
    "handlebars": "^4.7.8",
    "fs-extra": "^11.2.0",
    "kysely": "^0.28.7",
    "zod": "^4.1.11",
    "dotenv": "^16.4.5",
    "cosmiconfig": "^9.0.0",
    "cosmiconfig-typescript-loader": "^5.1.0",
    "execa": "^9.5.2",
    "figures": "^6.1.0",
    "strip-ansi": "^7.1.0",
    "wrap-ansi": "^9.0.0",
    "glob": "^11.0.0",
    "pg": "^8.13.1",
    "mysql2": "^3.11.5",
    "better-sqlite3": "^12.0.0",
    "@kysera/core": "workspace:*",
    "@kysera/repository": "workspace:*",
    "@kysera/migrations": "workspace:*",
    "@kysera/audit": "workspace:*",
    "@kysera/soft-delete": "workspace:*",
    "@kysera/timestamps": "workspace:*"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@types/node": "^22.12.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2"
  },
  "sideEffects": false
}